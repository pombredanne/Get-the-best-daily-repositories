<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/dp_20"
    android:paddingStart="@dimen/dp_20"
    android:paddingEnd="@dimen/dp_20"
    android:background="@color/white"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/mIvIcon"
        android:layout_width="@dimen/dp_100"
        android:layout_height="@dimen/dp_100"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/mTvName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/mIvIcon"
        app:layout_constraintStart_toEndOf="@+id/mIvIcon"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="@dimen/dp_10"
        android:maxLines="1"
        android:ellipsize="end"
        android:textSize="@dimen/dp_28"
        android:textColor="@color/black"
        android:text="张三"/>

    <TextView
        android:id="@+id/mTvPackageName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/mIvIcon"
        app:layout_constraintStart_toStartOf="@+id/mTvName"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/dp_10"
        android:maxLines="1"
        android:ellipsize="end"
        android:textSize="@dimen/dp_28"
        android:textColor="@color/black"
        android:text="18813939999"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/color_CCCCCC"
        app:layout_constraintTop_toBottomOf="@+id/mIvIcon"
        android:layout_marginTop="@dimen/dp_20"/>

</androidx.constraintlayout.widget.ConstraintLayout>