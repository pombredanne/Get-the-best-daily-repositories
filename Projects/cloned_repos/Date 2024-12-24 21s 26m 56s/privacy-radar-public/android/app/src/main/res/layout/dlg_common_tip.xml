<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/shape_white_radius_8"
    android:paddingTop="@dimen/dp_36"
    android:paddingStart="@dimen/dp_40"
    android:paddingEnd="@dimen/dp_40">

    <TextView
        android:id="@+id/mTvTitle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_88"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center"
        android:textSize="@dimen/dp_32"
        android:textColor="@color/color_00162A"
        android:text="确定删除 3 件商品？" />

    <View
        android:id="@+id/line_title"
        style="@style/base_line_horizontal"
        app:layout_constraintTop_toBottomOf="@+id/mTvTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/dp_40"/>

    <TextView
        android:id="@+id/mTvOk"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_94"
        app:layout_constraintTop_toBottomOf="@+id/line_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/mTvCancel"
        android:gravity="center"
        android:textColor="@color/color_ED1B24"
        android:textSize="@dimen/dp_32"
        android:text="删除"/>

    <TextView
        android:id="@+id/mTvCancel"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_94"
        app:layout_constraintTop_toTopOf="@+id/mTvOk"
        app:layout_constraintStart_toEndOf="@+id/mTvOk"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"
        android:textColor="@color/color_808080"
        android:textSize="@dimen/dp_32"
        android:text="确定" />

    <View
        style="@style/base_line_vertical"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@+id/mTvOk"
        app:layout_constraintBottom_toBottomOf="@+id/mTvOk"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>