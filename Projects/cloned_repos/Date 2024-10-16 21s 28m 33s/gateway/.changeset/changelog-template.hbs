{{#each releases}}
  {{#if @first}}
    {{#commit-list commits heading='### Breaking' message='break'}}
      - {{subject}} by **{{author}}** [`{{shorthash}}`]({{href}})
    {{/commit-list}}

    {{#commit-list commits heading='### Features' message='feat' exclude='break'}}
      - {{subject}} by **{{author}}** [`{{shorthash}}`]({{href}})
    {{/commit-list}}

    {{#commit-list commits heading='### Bug Fixes' message='fix' exclude='break'}}
      - {{subject}} by **{{author}}** [`{{shorthash}}`]({{href}})
    {{/commit-list}}

    {{#commit-list commits heading='### Design & Visual' message='vis' exclude='break'}}
      - {{subject}} by **{{author}}** [`{{shorthash}}`]({{href}})
    {{/commit-list}}
  {{/if}}
{{/each}}