{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES6", "ES2020"],
    "module": "ESNext",
    "resolveJsonModule": true,
    "moduleResolution": "Node",
    "allowJs": true,
    "outDir": "./out",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"]
}
