{
  "name": "shiki-stream",
  "type": "module",
  "version": "0.0.1",
  "packageManager": "pnpm@10.4.1",
  "description": "Streaming colorization for Shiki",
  "author": "Anthony Fu <anthonyfu117@hotmail.com>",
  "license": "MIT",
  "funding": "https://github.com/sponsors/antfu",
  "homepage": "https://github.com/antfu/shiki-stream#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/antfu/shiki-stream.git"
  },
  "bugs": "https://github.com/antfu/shiki-stream/issues",
  "keywords": [],
  "sideEffects": false,
  "exports": {
    ".": "./dist/index.mjs",
    "./vue": "./dist/vue.mjs",
    "./react": "./dist/react.mjs"
  },
  "main": "./dist/index.mjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.mts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "unbuild",
    "dev": "unbuild --stub",
    "lint": "eslint .",
    "prepublishOnly": "nr build",
    "release": "bumpp && pnpm publish",
    "start": "tsx src/index.ts",
    "test": "vitest",
    "typecheck": "vue-tsc --noEmit",
    "prepare": "simple-git-hooks",
    "play": "nr -C playground dev",
    "play:build": "nr -C playground build"
  },
  "peerDependencies": {
    "react": "^19.0.0",
    "vue": "^3.2.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    },
    "vue": {
      "optional": true
    }
  },
  "dependencies": {
    "@shikijs/core": "catalog:",
    "@shikijs/types": "catalog:"
  },
  "devDependencies": {
    "@antfu/eslint-config": "catalog:",
    "@antfu/ni": "catalog:",
    "@antfu/utils": "catalog:",
    "@eslint-react/eslint-plugin": "catalog:",
    "@shikijs/engine-javascript": "catalog:",
    "@shikijs/langs": "catalog:",
    "@shikijs/themes": "catalog:",
    "@types/node": "catalog:",
    "@types/react": "catalog:",
    "bumpp": "catalog:",
    "eslint": "catalog:",
    "lint-staged": "catalog:",
    "pnpm": "catalog:",
    "react": "catalog:",
    "shiki": "catalog:",
    "simple-git-hooks": "catalog:",
    "tsx": "catalog:",
    "typescript": "catalog:",
    "unbuild": "catalog:",
    "vite": "catalog:",
    "vitest": "catalog:",
    "vue-tsc": "catalog:"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "@swc/core"
    ]
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
